[Unit]
Description=BitPredict API Server
After=network.target

[Service]
Type=simple
WorkingDirectory=/root/bitpredict-server
ExecStart=/usr/bin/node index.js
Restart=always
RestartSec=5
Environment=NODE_ENV=production
StandardOutput=append:/var/log/bitpredict.log
StandardError=append:/var/log/bitpredict.log

[Install]
WantedBy=multi-user.target
