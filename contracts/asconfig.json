{
    "targets": {
        "debug": {
            "outFile": "build/PredictionMarket.wasm",
            "textFile": "build/PredictionMarket.wat",
            "use": ["abort=src/index/abort"]
        },
        "release": {
            "outFile": "build/PredictionMarket.wasm",
            "textFile": "build/PredictionMarket.wat",
            "use": ["abort=src/index/abort"]
        },
        "pred-debug": {
            "outFile": "build/PredToken.wasm",
            "textFile": "build/PredToken.wat",
            "use": ["abort=src/pred-index/abort"]
        },
        "pred-release": {
            "outFile": "build/PredToken.wasm",
            "textFile": "build/PredToken.wat",
            "use": ["abort=src/pred-index/abort"]
        }
    },
    "options": {
        "transform": "@btc-vision/opnet-transform",
        "sourceMap": false,
        "optimizeLevel": 3,
        "shrinkLevel": 1,
        "converge": true,
        "noAssert": false,
        "enable": [
            "sign-extension",
            "mutable-globals",
            "nontrapping-f2i",
            "bulk-memory",
            "simd",
            "reference-types",
            "multi-value"
        ],
        "runtime": "stub",
        "memoryBase": 0,
        "initialMemory": 1,
        "exportStart": "start",
        "use": []
    }
}
